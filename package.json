{
  "name": "documentation-api",
  "version": "1.0.0",
  "description": "The Cloud Conformity API allows you to programmatically interact with Cloud Conformity",
  "scripts": {
    "validate": "swagger-cli validate open-api/openapi.yml",
    "build": "swagger-cli bundle open-api/openapi.yml --outfile build/openapi3.yml --type yaml",
    "format-api-docs": "prettier open-api --write",
    "start": "redoc-cli serve open-api/openapi.yml --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudconformity/documentation-api.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cloudconformity/documentation-api/issues"
  },
  "homepage": "https://github.com/cloudconformity/documentation-api#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "prettier": "^2.1.1",
    "redoc-cli": "^0.9.12",
    "swagger-cli": "^4.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate && npm run format-api-docs",
      "pre-push": "npm run validate"
    }
  }
}
